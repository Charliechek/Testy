{% extends "base.html.twig" %}

{% block title %}Nový test{% endblock %}

{% block body %}
    <div class="container card">
        <div class="card-header">
            {{ block("title") }}
        </div>
        <div class="card-body">

            {{ form_start(form) }}
                <div class="row">
                    <div class="col-3 text-end">
                        {{ form_label(form.nazev) }}
                    </div>
                    <div class="col">
                        {{ form_widget(form.nazev) }}
                        {{ form_errors(form.nazev) }}
                    </div>
                    <div class="col-3 text-start">
                        {{ form_widget(form.odeslat, {label: "vytvořit"}) }}
                    </div>
                </div>
            {{ form_end(form) }}

        </div>
    </div>
{% endblock %}